<Window x:Class="Mini_Switching_Management_System_Client.View.AddWorkPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_Switching_Management_System_Client.View"
        mc:Ignorable="d"
        Title="AddWorkPlanWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="Request information" HorizontalAlignment="Center"
                        FontWeight="Bold" FontSize="18"
                        Margin="15"/>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Work plan ID:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding ID}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Work plan status:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding WorkPlanState}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Work plan name"/>
                <TextBox Text="{Binding WorkPlanName}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Operator name"/>
                <TextBox Text="{Binding OperatorName}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Operator surname"/>
                <TextBox Text="{Binding OperatorSurname}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Start date"/>
                <DatePicker SelectedDate="{Binding StartDate}">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="End date"/>
                <DatePicker SelectedDate="{Binding EndDate}">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="Save" HorizontalAlignment="Left" Grid.Column="0" Margin="15"
                    FontSize="15" Width="75" Height="35"
                    Command="{Binding Button_SaveWorkPlan}"/>

            <Button Content="Cancel" HorizontalAlignment="Right" Grid.Column="1" Margin="15"
                    FontSize="15" Width="75" Height="35"
                    Command="{Binding Button_CancelWorkPlan}"/>
        </Grid>

        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Add instruction" Grid.Column="0" Margin="10" Command="{Binding Button_AddInstruction}"/>
                <Button Content="Delete instruction" Grid.Column="1" Margin="10" Command="{Binding Button_DeleteInstruction}"/>
                <Button Content="Add switch" Grid.Column="2" Margin="10" Command="{Binding Button_AddSwitch}"/>
                <Button Content="Delete switch" Grid.Column="3" Margin="10" Command="{Binding Button_DeleteSwitch}"/>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{Binding Instructions.Instructions}" HorizontalContentAlignment="Stretch"
                      SelectionMode="Single" SelectedItem="{Binding SelectedInstruction}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Black" CornerRadius="3" Margin="3" Padding="3" HorizontalAlignment="Stretch">
                            <Grid Margin="5" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Number, StringFormat=Instr. {0}}"
                                    Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Switches}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="Gray" CornerRadius="5" BorderThickness="1" Margin="3,0,3,0">
                                                <TextBlock>
                                                    <Run Text="{Binding ID, StringFormat=Switch: {0}}"/>
                                                    <LineBreak />
                                                    <Run Text="{Binding StateToString, StringFormat=State: {0}, Mode=OneWay}" />
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>

<Window x:Class="Mini_Switching_Management_System_Client.View.AddWorkPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_Switching_Management_System_Client.View"
        xmlns:resources="clr-namespace:Mini_Switching_Management_System_Client.Model.Resources"
        mc:Ignorable="d"
        Title="AddWorkPlanWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Grid.Row="0">
            <TextBlock Text="{x:Static resources:AddWorkPlan_Resources.Label_request_information}" HorizontalAlignment="Center"
                        FontWeight="Bold" FontSize="18"
                        Margin="15"/>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_id}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding ID}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_status}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding WorkPlanState}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_name}"/>
                <TextBox Text="{Binding WorkPlanName}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_operator_name}"/>
                <TextBox Text="{Binding OperatorName}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_operator_surname}"/>
                <TextBox Text="{Binding OperatorSurname}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_start_date}"/>
                <DatePicker SelectedDate="{Binding StartDate}">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{x:Static resources:WorkPlan_Resources.Label_end_date}"/>
                <DatePicker SelectedDate="{Binding EndDate}">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="{x:Static resources:Common_Resources.Label_save}" HorizontalAlignment="Left" Grid.Column="0" Margin="15"
                    FontSize="15" Width="75" Height="35"
                    Command="{Binding Button_SaveWorkPlan}"/>

            <Button Content="{x:Static resources:Common_Resources.Label_cancel}" HorizontalAlignment="Right" Grid.Column="1" Margin="15"
                    FontSize="15" Width="75" Height="35"
                    Command="{Binding Button_CancelWorkPlan}"/>
        </Grid>

        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="{x:Static resources:AddWorkPlan_Resources.Label_instruction_add}" Grid.Column="0" Margin="10" Command="{Binding Button_AddInstruction}"/>
                <Button Content="{x:Static resources:AddWorkPlan_Resources.Label_instruction_delete}" Grid.Column="1" Margin="10" Command="{Binding Button_DeleteInstruction}"/>
                <Button Content="{x:Static resources:AddWorkPlan_Resources.Label_switch_add}" Grid.Column="2" Margin="10" Command="{Binding Button_AddSwitch}"/>
                <Button Content="{x:Static resources:AddWorkPlan_Resources.Label_switch_delete}" Grid.Column="3" Margin="10" Command="{Binding Button_DeleteSwitch}"/>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{Binding Instructions}" HorizontalContentAlignment="Stretch"
                      SelectionMode="Single" SelectedItem="{Binding SelectedInstruction}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Black" CornerRadius="3" Margin="3" Padding="3" HorizontalAlignment="Stretch">
                            <Grid Margin="5" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Source="{x:Static resources:AddWorkPlan_Resources.Label_instruction}" />
                                            <Binding Path="Number" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <ItemsControl Grid.Column="1" ItemsSource="{Binding Switches}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="Gray" CornerRadius="5" BorderThickness="1" Margin="3,0,3,0">
                                                <TextBlock>
                                                    <Run>
                                                        <Run.Text>
                                                            <MultiBinding StringFormat="{}{0} {1}" Mode="OneWay">
                                                                <Binding Source="{x:Static resources:AddWorkPlan_Resources.Label_switch}" />
                                                                <Binding Path="ID" />
                                                            </MultiBinding>
                                                        </Run.Text>
                                                    </Run>
                                                    <LineBreak />
                                                    <Run>
                                                        <Run.Text>
                                                            <MultiBinding StringFormat="{}{0} {1}" Mode="OneWay">
                                                                <Binding Source="{x:Static resources:AddWorkPlan_Resources.Label_state}" />
                                                                <Binding Path="StateToString" />
                                                            </MultiBinding>
                                                        </Run.Text>
                                                    </Run>                                                
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
